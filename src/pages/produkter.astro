  },
};

const response = await fetch(url, options);
const alleProdukter = await response.json();

const gold = alleProdukter.filter(
  (produkt) => produkt.color == 4 && (produkt.type == 2 || produkt.type == 1)
);

const necklaces = alleProdukter.filter(
  (produkt) => produkt.type == 2 && (produkt.color == 3 || produkt.color == 4)
);

const earrings = alleProdukter.filter((produkt) => produkt.type == 1);

const silver = alleProdukter.filter(
  (produkt) => produkt.color == 3 && (produkt.type == 2 || produkt.type == 1)
);

/* Filtrer 3 produkter til desktop*/
const view1 = alleProdukter.filter(
  (produkt) => produkt.type == 2 && produkt.true == true
);
const view2 = alleProdukter.filter(
  (produkt) => produkt.type == 1 && produkt.true == true
);

/* Filtrer 2 produkter til mobil*/

const view3 = alleProdukter.filter(
  (produkt) => produkt.type == 2 && produkt.mobil == true
);
const view4 = alleProdukter.filter(
  (produkt) => produkt.type == 1 && produkt.mobil == true
