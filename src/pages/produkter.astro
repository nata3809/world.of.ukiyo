---

<Layout>
  <Header
    h2={""}
    text={"All our earrings are unique and handmade with love and passion. Made to last."}
    img2="img/spike.png"
    img="img/menu.webp"
  />
  <section>
    <h4>Explore</h4>

    <div class="explore">
      <div>
        <a class="explore_1" href="/necklaces"
          ><img src="img/link1.webp" alt="big heart" /></a
        >
      </div>
      <div class="explore_2">
        <a href="/earrings"><img src="img/link2.webp" alt="big heart" /></a>
      </div>
    </div>
  </section>
  <!-- dekstopview -->

  <section class="desktop_filter">
    <section>
      <div class="description">
        <div>
          <h4>NECKLACES</h4>
        </div>

        <div>
          <h3>
            All earrings are made from 925 sterling silver, or 18k gold plated
            sterling silver
          </h3>
        </div>
      </div>

      <div class="grid_produkter">
        <Container kategori={view1} />
      </div>

      <a href="/necklaces">Shop all necklaces</a>
    </section>

    <section>
      <div class="description">
        <div>
          <h4>EARRINGS</h4>
        </div>

        <div>
          <h3>
            All earrings are made from 925 sterling silver, or 18k gold plated
            sterling silver
          </h3>
        </div>
      </div>

      <div class="grid_produkter">
        <Container kategori={view2} />
      </div>
      <a href="/earrings">Shop all earrings</a>
    </section>
  </section>

  <!-- mobilview -->
  <section class="mobil_filter">
    <section>
      <div class="description">
        <div>
          <h4>NECKLACES</h4>
        </div>

        <div>
          <h3>
            All earrings are made from 925 sterling silver, or 18k gold plated
            sterling silver
          </h3>
        </div>
      </div>

      <div class="grid_produkter">
        <Container kategori={view3} />
      </div>

      <a href="/necklaces">Shop all necklaces</a>
    </section>

    <section>
      <div class="description">
        <div>
          <h4>EARRINGS</h4>
        </div>

        <div>
          <h3>
            All earrings are made from 925 sterling silver, or 18k gold plated
            sterling silver
          </h3>
        </div>
      </div>

