---
import "../styles/style.css";
const { h2, text, img } = Astro.props;
---

<article class="baggrund">
  <div class="boks1">
    <h2>{h2}</h2>
    <h3>{text}</h3>
  </div>
  <div class="boks2">
    <img src={img} />
  </div>
</article>

<style>
  article {
    display: flex;
  }
  .baggrund {
    background-color: #eef0ee;
  }

  .baggrund img {
    object-fit: contain;
    max-width: 100%;
  }

  .boks1 {
    display: flex;
    flex-direction: column;
    padding: 0.5rem;
    justify-content: center;
  }

  .boks2 {
    display: flex;
    align-items: flex-end;
  }

  h2 {
    font-size: 1.5rem;
    margin: 0;
  }

  h3 {
    font-size: 0.7rem;
    margin: 0;
  }

  /* tablet */
  @media (min-width: 401px) {
    .baggrund img {
      object-fit: contain;
      max-width: 100%;
    }

    h2 {
      font-size: 3rem;
    }

    h3 {
      font-size: 1.2rem;
    }
  }

  /* desktop */
  @media (min-width: 1200px) {
    .baggrund img {
      object-fit: contain;
      max-width: 70%;
    }

    .boks1 {
      padding-left: 5rem;
    }

    .boks2 {
      display: flex;
      justify-content: flex-end;
    }
    h2 {
      font-size: 4rem;
    }

    h3 {
      font-size: 1.2rem;
      padding-top: 1rem;
    }
  }
</style>
