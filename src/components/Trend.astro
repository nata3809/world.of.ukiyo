import "../styles/style.css";
import Link from "../components/Link.astro";
---

<div class="trend">
  <h2>Trending now</h2>
  <Link url="/produkter" text="Shop trending products" />
</div>

<article>
  <div id="carousel-container">
    <div id="carousel-wrapper">
      <img src="img/1.webp" alt="Billede 1" class="slide" />
      <img src="img/2.webp" alt="Billede 2" class="slide" />
      <img src="img/3.webp" alt="Billede 3" class="slide" />
      <img src="img/4.webp" alt="Billede 4" class="slide" />
      <img src="img/5.webp" alt="Billede 5" class="slide" />
      <img src="img/6.webp" alt="Billede 6" class="slide" />
