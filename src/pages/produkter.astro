</Layout>

<style>
  .desktop_filter {
    display: none;
  }
  .grid_produkter {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
  a {
    font-family: "Cormorant", serif;
    text-decoration: none;
    color: black;
  }
  .description {
    display: grid;
    grid-template-columns: 1fr 1fr;
    border-top: solid black 0.5px;
    border-bottom: solid black 0.5px;
    align-items: center;
  }
  section {
    margin-top: 80px;
  }
  .explore {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
  .explore_1 {
    display: flex;
    justify-content: right;
  }
  .explore_2 {
    display: flex;
    justify-content: left;
  }
  .explore img {
    width: 90%;
    opacity: 50%;
    border: solid black 1px;
  }
  h3 {
    font-size: 0.8rem;
  }
  h4 {
    font-size: 1rem;
  }
  /**Tablet**/
  @media (min-width: 401px) {
    .grid_produkter {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
    }
    h2,
    p {
      font-size: 0.8rem;
    }
    .mobil_filter {
      display: none;
    }
    .desktop_filter {
      display: block;
    }
    h3 {
      font-size: 1rem;
    }
    h4 {
      font-size: 1.5rem;
    }
  }

  /**dekstop**/
  @media (min-width: 1199px) {
    .description {
      border-top: solid black 1px;
      border-bottom: solid black 1px;
    }
    .desktop_filter {
      display: block;
    }
    .mobil_filter {
      display: none;
    }
    .grid_produkter {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
    }
    .explore img {
      width: 60%;
      opacity: 50%;
      border: solid black 1px;
    }

    .explore_1 {
      display: flex;
      justify-content: right;
    }
  }
</style>
