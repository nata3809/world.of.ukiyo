---

<Layout>
  <Header
    h2={""}
    text={"All our earrings are unique and handmade with love and passion. Made to last."}
    img2="img/spike.png"
    img="img/menu.webp"
  />
  <section>
    <div class="explore_overskrift">
      <h4>Explore</h4>
    </div>

    <div class="explore">
      <div class="container1">
        <img class="img11" src="img/link1.webp" alt="Billede" />
        <div class="overlay">
          <h2>EARRINGS</h2>
        </div>
      </div>

      <div class="container2">
        <img class="img12" src="img/link2.webp" alt="Billede" />
        <div class="overlay">
          <h2>NECKLACES</h2>
        </div>
      </div>
    </div>
  </section>
  <!-- dekstopview -->

  <section class="desktop_filter">
    <section>
      <div class="description">
        <div>
          <h4>NECKLACES</h4>
        </div>

        <div class="text_view">
          <h3>
            All earrings are made from 925 sterling silver, or 18k gold plated
            sterling silver
          </h3>
        </div>
      </div>

      <div class="grid_produkter">
        <Container kategori={view1} />
      </div>

      <div></div>
      <Link url="/necklaces" text="Shop all necklaces" />
    </section>

    <section>
      <div class="description">
        <div>
          <h4>EARRINGS</h4>
        </div>

        <div class="text_view">
          <h3>
            All earrings are made from 925 sterling silver, or 18k gold plated
            sterling silver
          </h3>
        </div>
      </div>

      <div class="grid_produkter">
        <Container kategori={view2} />
      </div>

      <Link url="/earrings" text="Shop all earrings" />
    </section>
  </section>

  <!-- mobilview -->
  <section class="mobil_filter">
    <section>
      <div class="description">
        <div>
          <h4>NECKLACES</h4>
        </div>

        <div class="text_view">
          <h3>
            All earrings are made from 925 sterling silver, or 18k gold plated
            sterling silver
          </h3>
        </div>
      </div>

      <div class="grid_produkter">
        <Container kategori={view3} />
      </div>

      <Link url="/necklaces" text="Shop all necklaces" />
    </section>

    <section>
      <div class="description">
        <div>
          <h4>EARRINGS</h4>
        </div>

        <div class="text_view">
          <h3>
            All earrings are made from 925 sterling silver, or 18k gold plated
            sterling silver
          </h3>
        </div>
      </div>

      <div class="grid_produkter">
        <Container kategori={view4} />
      </div>
      <Link url="/earrings" text="Shop all earrings" />
    </section>
  </section>

  <style>
    .desktop_filter {
      display: none;
    }
    .grid_produkter {
      display: grid;
      grid-template-columns: 1fr 1fr;
      margin-bottom: 40px;
    }
    a {
      font-family: "Cormorant", serif;
      text-decoration: none;
      color: black;
    }
    .description {
      display: grid;
      grid-template-columns: 1fr 1fr;
      border-top: solid black 0.5px;
      border-bottom: solid black 0.5px;
      align-items: center;
    }

    .text_view {
      text-align: center;
    }
    section {
      margin-top: 80px;
    }

    /*Earrings og Necklaces store link*/
    .container1 {
      display: grid;
      justify-content: flex-end;
    }

    .container2 {
      display: grid;
      justify-content: flex-start;
    }

    .overlay,
    .img11,
    .img12 {
      grid-area: 1/1;
      place-items: center;
      z-index: 1;
      display: grid;
    }

    .img11 {
      justify-self: center;
    }
    .img12 {
      justify-self: center;
    }

    .explore {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }

    .explore img {
      width: 150px;
      opacity: 40%;
      border: solid 0.5px black;
      border-top: none;
    }

    h2 {
      font-size: 1rem;
    }
    h3 {
      font-size: 0.8rem;
    }
    h4 {
      font-size: 1rem;
    }

    .explore_overskrift {
      border-top: solid 0.5px black;
      border-bottom: solid 0.5px black;
    }

    /******Tablet****/
    @media (min-width: 401px) {
      .grid_produkter {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
      }

      .mobil_filter {
        display: none;
      }
      .desktop_filter {
        display: block;
      }
      h3 {
        font-size: 0.8rem;
      }
      h4 {
        font-size: 2rem;
      }

      p {
        font-size: 0.8rem;
      }

      .explore_overskrift {
        border-top: solid 1px black;
        border-bottom: solid 1px black;
      }

      .explore img {
        width: 75%;
        opacity: 40%;
        border: solid 1px black;
        border-top: none;
      }
    }

    /**dekstop**/
    @media (min-width: 1199px) {
      .description {
        border-top: solid black 1px;
        border-bottom: solid black 1px;
      }
      .desktop_filter {
        display: block;
      }
      .mobil_filter {
        display: none;
      }
      .grid_produkter {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
      }

      h3 {
        font-size: 1rem;
      }
      h2 {
        font-size: 2rem;
      }
    }
  </style>
</Layout>
