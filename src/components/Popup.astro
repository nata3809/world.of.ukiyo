---
import "../styles/style.css";
---

<div id="popup" class="popup">
  <span class="close" onclick="closePopup()">&times;</span>
  <p>Velkommen til pop-up-vinduet!</p>
</div>

<script>
  // Funktion til at åbne pop-up-vinduet ved indlæsning af siden
  window.onload = function () {
    document.getElementById("popup").style.display = "block";
  };

  // Funktion til at lukke pop-up-vinduet
  function closePopup() {
    var popup = document.getElementById("popup");
    popup.parentNode.removeChild(popup);
  }
</script>

<style>
  /* CSS-styling til pop-up-vinduet */
  .popup {
    display: none; /* Start med at skjule pop-up-vinduet */
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 300px;
    padding: 20px;
    background-color: #f1f1f1;
    border: 1px solid #ccc;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  /* CSS-styling til lukningsknappen */
  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
  }

  .close:hover,
  .close:focus {
    color: #000;
    text-decoration: none;
  }
</style>
