    .grid_produkter {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }
    h2,
    p {
      font-size: 0.8rem;
    }

    h3 {
      font-size: 0.8rem;
    }
    h4 {
      font-size: 1.5rem;
    }
    .grid_liste_necklace {
