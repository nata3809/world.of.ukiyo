      background-color: #eaebe6;
      justify-content: center;
    }
    .liste_necklace {
      width: 60%;
      justify-self: center;
    }
  }

  /**dekstop**/
  @media (min-width: 1199px) {
    .description {
      border-top: solid black 1px;
      border-bottom: solid black 1px;
    }
    .grid_produkter {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    h3 {
      font-size: 1rem;
    }
    h4 {
      font-size: 2rem;
    }
  }
</style>
